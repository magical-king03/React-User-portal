<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
  <%- include('nav') %>
    <div class="conatiner">
        <div class="row justify-content-center">
            <div class="col-md-5">
              <% if(users.length == 0) { %>
                <div class="mt-5">
                  <h2 class="mb-5">Start adding your users, <%= req.session.user.name %></h2>
                  <a href="/add" class="add-btn">Add user</a>
                </div>
              <% } else { %>
                <h1 class="fw-bold fs-3 mt-5 mb-3">All registered user</h1>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-center">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < users.length; i++)  { %>
                      <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><%= users[i].name %></td>
                        <td><%= users[i].email %></td>
                        <td class="d-flex justify-content-center">
                          <form action="/edit" method="post">
                            <input type="hidden" name="email" value="<%= users[i].email %>">
                            <button class="cta-btn-1 me-3">Edit</button>
                          </form>   
                          <form action="/del" method="post">
                            <input type="hidden" name="email" value="<%= users[i].email %>">
                            <button class="cta-btn-2">Del</button>
                          </form>                       
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                  <% } %>
            </div>
        </div>
    </div>
    
</body>
</html>